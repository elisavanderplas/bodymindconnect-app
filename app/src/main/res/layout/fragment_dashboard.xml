<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black" />

        <!-- Refresh Button -->
        <Button
            android:id="@+id/btn_refresh_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”„ Refresh Data"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Current Event Card (if any) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_current_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#FFF0F0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”´ NU ACTIEF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_current_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Geen actieve afspraak"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Mood Summary Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’­ Stemming Overzicht"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_total_entries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Totaal ingevoerd: ..."
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_latest_mood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laatste stemming: ..."
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_latest_energy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laatste energie: ..."
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_latest_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laatste invoer: ..."
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginVertical="8dp" />

                <TextView
                    android:id="@+id/tv_average_mood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gemiddelde stemming: ..."
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_average_energy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gemiddelde energie: ..."
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Calendar Events Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… Agenda"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_calendar_events"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laden agenda..."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Location Data Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Locatie"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_location_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laden locatie..."
                    android:textSize="12sp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Insights Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Inzichten"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_insights"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Genereren inzichten..."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- All Mood Entries Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Stemming Geschiedenis"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_all_entries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laden geschiedenis..."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>

